<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".ResumeDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/v_resume_top_bg"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="#26A6BA" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher_background" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="#FF282828"
            android:textSize="22sp"
            tools:text="姓名" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="#FF282828"
            android:textSize="14sp"
            android:visibility="invisible"
            tools:text="年龄"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_work_years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_age"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="工作年限"
            android:textColor="#FF282828"
            android:textSize="14sp"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_work_years"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="简介"
            android:textColor="#FF282828"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_experience"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/v_resume_top_bg"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="履历："
                android:textColor="#FF282828"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#FF282828"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>